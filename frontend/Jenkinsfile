pipeline {
    agent none
    stages {
        stage('Install dep and build') {
            agent {
                docker { image 'node:18.19.0-alpine3.19' }
            }
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm build'
                    stash includes: '**/dist/*', name: 'app'
                }
            }
        }
        stage('scann') {
            agent { label 'java' }
            def scannerHome = tool 'sonarqube';
            steps {
                dir('frontend') {
                    withSonarQubeEnv(installationName: 'sonarqube') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
    }
}
